@using Pokemon_AP_Project_G3.Controllers
@{
    ViewBag.Title = "Team Builder";
}
@model TeamViewModel

<main class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <h3 class="mb-3">Your Teams</h3>
            <div>
                @foreach (var team in Model.Teams)
                {
                    <div class="mb-3 p-3 shadow bg-white rounded">
                        <div class="d-flex align-items-center">
                            <span class="fw-bold me-3">Team @team.TeamId</span>
                            <div class="d-flex">
                                @foreach (var pokemon in team.TeamPokemons)
                                {
                                    <img src="@pokemon.img_url_enemy" alt="@pokemon.name" class="img-thumbnail me-2" style="width: 50px; height: 50px;">
                                }
                            </div>
                            <a href="/Team/Edit/@team.TeamId" class="btn btn-sm btn-primary ms-auto">Edit</a>
                        </div>
                    </div>
                }
                @if (Model.Teams.Count < 3)
                {
                    <div class="d-flex justify-content-end">
                        <a href="/Team/Create" class="btn btn-lg btn-success rounded-circle shadow" style="width: 50px; height: 50px;">
                            <span class="fs-4">+</span>
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-7">
            <h3 class="mb-3">Pokémons Owned</h3>
            <div class="overflow-auto" style="max-height: 600px;">
                <div class="row">
                    @foreach (var pokedexEntry in Model.Pokedex)
                    {
                        <div class="col-12 mb-3">
                            <div class="p-3 shadow rounded" style="@((pokedexEntry.Status == "Infirmary") ? "background-color: #f8d7da;" : "background-color: #ffffff;")">
                                <div class="d-flex align-items-center">
                                    <img src="@pokedexEntry.Pokemon.img_url_enemy" alt="@pokedexEntry.Pokemon.name" class="img-thumbnail me-3" style="width: 50px; height: 50px;">
                                    <div>
                                        <h5 class="m-0">@pokedexEntry.Pokemon.name</h5>
                                        <small class="text-muted">Weight: @pokedexEntry.Pokemon.weight kg | Type: @pokedexEntry.Pokemon.type</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
